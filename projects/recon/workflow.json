{
  "stateMachine": {
    "id": "dockerScript",
    "initial": "setup",
    "context": {},
    "states": {
      "setup": {
        "entry": [
          {
            "type": "createVolume",
            "Name": "scanlogs",
            "persist": true
          }
        ],
        "on": {
          "NEXT": "setupScanNetwork"
        }
      },
      "setupScanNetwork": {
        "entry": [
          {
            "type": "createNetwork",
            "networkName": "scannetwork",
            "subnetMask": "172.22.0.0/16",
            "persist": true
          }
        ],
        "on": {
          "NEXT": "mongodb"
        }
      },
      "mongodb": {
        "entry": [
          {
            "type": "createContainer",
            "reuse": true,
            "sustain": true,
            "containerName": "mongodb",
            "dockerFolderName": "mongodb",
            "ExposedPorts": {"27017/tcp": {}},
            "PortBindings": { "27017/tcp": [{ "HostPort": "27017" }]},
            "networkName": "scannetwork"
          }
        ],
        "on": {
          "NEXT": "api"
        }
      },
      "api": {
        "entry": [
          {
            "type": "createContainer",
            "reuse": true,
            "containerName": "api",
            "dockerFolderName": "dbapi",
            "ExposedPorts": {"8081/tcp": {}},
            "PortBindings": { "8081/tcp": [{ "HostPort": "8081" }]},
            "networkName": "scannetwork"
          }
        ],
        "on": {
          "NEXT": "amass"
        }
      },
      "amass": {
        "entry": [
          {
            "type": "runWorkflow",
            "workflowName": "amassScan",
            "source": "externalProjects"
          }
        ],
        "on": {
          "NEXT": "complete"
        }
      },
      "complete": {
        "type": "final"
      }
    }
  }

}
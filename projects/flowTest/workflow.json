{
  "stateMachine": {
    "id": "dockerScript",
    "initial": "setup",
    "context": {},
    "states": {
      "setup": {
        "entry": [
          {
            "type": "createNetwork",
            "networkName": "recon"
          }
        ],
        "on": {
          "NEXT": "createVolume"
        }
      },
      "createVolume": {
        "entry": [
          {
            "type": "createVolume",
            "Name": "recon",
            "persist": true
          }
        ],
        "on": {
          "NEXT": "nginxImage"
        }
      },
      "nginxImage": {
        "entry": [
          {
            "type": "createContainer",
            "await": true,
            "containerName": "nginx",
            "dockerFolderName": "nginxImage",
            "ExposedPorts": {"8083/tcp": {}},
            "PortBindings": { "8083/tcp": [{ "HostPort": "8083" }]},
            "networkName": "recon"
          }
        ],
        "on": {
          "NEXT": "secondWorkflow"
        }
      },
      "secondWorkflow": {
        "entry": [
          {
            "type": "runWorkflow",
            "workflowName": "secondFlow"
          }
        ],
        "on": {
          "NEXT": "nginxImage3"
        }
      },
      "nginxImage3": {
        "entry": [
          {
            "type": "createContainer",
            "await": true,
            "containerName": "nginx3",
            "dockerFolderName": "nginxImage",
            "ExposedPorts": {"8084/tcp": {}},
            "PortBindings": { "8084/tcp": [{ "HostPort": "8084" }]},
            "networkName": "recon"
          }
        ],
        "on": {
          "NEXT": "complete"
        }
      },
      "complete": {
        "type": "final"
      }
    }
  }

}